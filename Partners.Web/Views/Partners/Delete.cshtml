
@using Partners.Web.Data.Entities
@model Partner

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <h2>Delete Partner</h2>
    <p>Are you sure you want to delete this partner?</p>
    <dl class="row">
        <dt class="col-sm-3">First Name:</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Last Name:</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">Address:</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Partner Number:</dt>
        <dd class="col-sm-9">@Model.PartnerNumber</dd>

        <dt class="col-sm-3">Croatian PIN:</dt>
        <dd class="col-sm-9">@Model.CroatianPIN</dd>

        <dt class="col-sm-3">Partner Type:</dt>
        <dd class="col-sm-9">@((Model.PartnerTypeId == 1 ? "Personal" : "Legal"))</dd>

        <dt class="col-sm-3">Created At:</dt>
        <dd class="col-sm-9">@Model.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</dd>

        <dt class="col-sm-3">Created By User:</dt>
        <dd class="col-sm-9">@Model.CreateByUser</dd>

        <dt class="col-sm-3">Is Foreign:</dt>
        <dd class="col-sm-9">@((Model.IsForeign ? "Yes" : "No"))</dd>

        <dt class="col-sm-3">External Code:</dt>
        <dd class="col-sm-9">@Model.ExternalCode</dd>

        <dt class="col-sm-3">Gender:</dt>
        <dd class="col-sm-9">@((Model.Gender == 'M' ? "Male" : (Model.Gender == 'F' ? "Female" : "Not Specified")))</dd>
    </dl>
    @using (Html.BeginForm("DeleteConfirmed", "Partners", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Partners")" class="btn btn-secondary">Cancel</a>
    }
</div>