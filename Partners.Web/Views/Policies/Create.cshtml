@model Partners.Web.Data.Entities.Policy

@{
    var id = (int)ViewBag.PartnerId;
}

@using (Html.BeginForm("Create", "Policies", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.Hidden("PartnerId", id)

    <div class="form-group">
        @Html.LabelFor(model => model.PolicyNumber)
        @Html.TextBoxFor(model => model.PolicyNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PolicyNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PolicyAmount)
        @Html.TextBoxFor(model => model.PolicyAmount, new { @class = "form-control", @type = "decimal" })
        @Html.ValidationMessageFor(model => model.PolicyAmount)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", new { id = id }, new { @class = "btn btn-default" })

}