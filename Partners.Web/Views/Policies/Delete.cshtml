@model Partners.Web.Data.Entities.Policy

@{
    var id = (int)ViewBag.PartnerId;
}

<h2>Delete Policy</h2>

<dl class="dl-horizontal">
    <dt>Policy Number:</dt>
    <dd>@Model.PolicyNumber</dd>

    <dt>Policy Amount:</dt>
    <dd>@Model.PolicyAmount</dd>
</dl>

@using (Html.BeginForm("DeleteConfirmed", "Policies", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <p>Are you sure you want to delete this policy?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", new {id = id })" class="btn btn-default">Cancel</a>
}